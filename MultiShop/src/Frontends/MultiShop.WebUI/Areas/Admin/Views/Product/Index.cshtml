@model List<ResultProductDto>
@{
    var counter = 0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Product Name</th>
                                <th>Product Price</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                counter++;
                                <tr>
                                    <th scope="row">@counter</th>
                                    <td>@item.ProductName</td>
                                    <td>@item.ProductPrice $</td>
                                    <td><a asp-action="update" asp-controller="product" asp-route-id="@item.ProductId" class="btn btn-success">Update</a></td>
                                    <td><a asp-action="delete" asp-controller="product" asp-route-id="@item.ProductId" class="btn btn-danger">Delete</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a asp-controller="product" asp-action="create" class="btn btn-primary">Create new Product</a>
                </div>
            </div>
        </div>
    </div>
</section>
